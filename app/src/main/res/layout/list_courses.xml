<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#CFCCCC">

    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#fff"
        app:cardCornerRadius="1dp"
        app:cardElevation="1dp"
        app:cardUseCompatPadding="true"
        tools:showIn="@layout/fragment_list">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/curso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Web Design"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/especialidade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/curso"
                android:layout_alignStart="@id/curso"
                android:text="Especialidade: "
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/especialidade_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/curso"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@+id/especialidade"
                android:textSize="20sp"
                tools:text="Facebook" />

            <TextView
                android:id="@+id/idioma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/especialidade"
                android:layout_alignStart="@id/especialidade"
                android:text="Idioma: "
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/idioma_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/especialidade"
                android:layout_toEndOf="@id/idioma"
                android:ellipsize="marquee"
                android:gravity="end"
                android:singleLine="true"
                android:textSize="20sp"
                tools:text="Descrição sobre este Card. Descrição sobre este Card." />

            <TextView
                android:id="@+id/duracao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/idioma"
                android:layout_alignStart="@id/idioma"
                android:text="Duração: "
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/duracao_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/idioma"
                android:layout_toEndOf="@id/duracao"
                android:text="40h"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/site"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/duracao"
                android:layout_alignStart="@id/duracao"
                android:text="Site: "
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/site_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/duracao"
                android:layout_toEndOf="@id/site"
                android:text="Fundação Bradesco"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/txt_preview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/site"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="24dp"
                android:text="Ler Mais"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img_star"
                android:layout_width="32sp"
                android:layout_height="32sp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_star_border_black_24dp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
