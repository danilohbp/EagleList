<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayoutFavorito"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragmentos.Favorito">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <TextView
            android:id="@+id/favoritosVazioTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="LISTA DE FAVORITOS"
            android:textColor="@color/eaglelistColoridoAzulCapri"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/favoritoConteudo1"
            android:textSize="14sp"
            android:gravity="center_horizontal"
            android:layout_below="@+id/favoritosVazioTitulo"
            android:layout_marginTop="10dp"/>

    </RelativeLayout>

</LinearLayout>